<form action="/movies/<%= @movie.id %>" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" class="form-control" placeholder="Title" name="title" value="<%= @movie.title %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Year</label>
    <input type="text" class="form-control" placeholder="Year" name="year" value="<%= @movie.year %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Actors</label>
    <input type="text" class="form-control" placeholder="Actors" name="actors" value="<%= @movie.actors %>">
  </div>

  <button type="submit" class="btn btn-default" value="PUT">Submit</button>

  <% if (@movie.id != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
