<%= form_for product do |p| %>
  <% if product.errors.any? %>
    <h2><%= pluralize(product.errors.count, 'error') %> to fix</h2>
    <% product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    <br>
  <% end %>


  <div class="field">
    <%= p.label :name %>
    <%= p.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= p.label :description %>
    <%= p.text_area :desc %>
  </div>
  <br>
  <div class="field">
    <%= p.label :stock %>
    <%= p.text_field :stock %>
  </div>
  <br>
  <div class="field">
    <%= p.label :price %>
    <%= p.text_field :price %>
  </div>
  <br>
  <div class="actions">
    <%= p.submit %>
  </div>
<% end %>
